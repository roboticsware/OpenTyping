<mah:MetroWindow x:Name="SelfWindow"
                 x:Class="OpenTyping.KeyPracticeWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                 xmlns:local="clr-namespace:OpenTyping"
                 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                 mc:Ignorable="d"
                 Title="열린타자"
                 Style="{StaticResource WindowTitleStyle}"
                 Width="810" 
                 Height="450"
                 ResizeMode="CanMinimize"
                 Icon="{StaticResource AppIcon}"
                 Closed="KeyPracticeWindow_Closed"
                 LocationChanged="KeyPracticeWindow_LocationChanged"
                 Activated="KeyPracticeWindow_Activated"
                 Deactivated="KeyPracticeWindow_Deactivated">
    <StackPanel Orientation="Vertical">
        <Grid x:Name="KeyGrid"
              Margin="0 10 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Name="PreviousTextBlock"
                       DataContext="{Binding ElementName=SelfWindow}"
                       Grid.Column="0"
                       Style="{StaticResource NormalTextBlock}"
                       Text="{Binding PreviousKey.KeyData}"
                       FontSize="30pt"
                       Foreground="#adb5bd"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"/>
            <Rectangle Grid.Column="1"
                       Width="1"
                       Height="60"
                       Margin="10 0 15 0"
                       Stroke="#868e96"/>
            <TextBlock Name="CurrentTextBlock"
                       DataContext="{Binding ElementName=SelfWindow}"
                       Grid.Column="2"
                       Style="{StaticResource NormalTextBlock}"
                       Text="{Binding CurrentKey.KeyData}"
                       FontSize="60pt"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            <Rectangle Grid.Column="3"
                       Width="1"
                       Height="60"
                       Margin="15 0 10 0" 
                       Stroke="#868e96"/>
            <TextBlock Name="NextTextBlock"
                       DataContext="{Binding ElementName=SelfWindow}"
                       Grid.Column="4"
                       Style="{StaticResource NormalTextBlock}"
                       Text="{Binding NextKey.KeyData}"
                       FontSize="30pt"
                       Foreground="#adb5bd"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"/>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
                     
            <StackPanel Orientation="Horizontal"
                        Margin="20 0 0 10"
                        Grid.Column="0"
                        Width="400"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left">
                <Rectangle Width="23" 
                           Height="23"
                           Margin="0 0 5 0"
                           Fill="#37b24d">
                    <Rectangle.OpacityMask>
                        <VisualBrush Visual="{iconPacks:FontAwesome Kind=CheckCircleSolid}"/>
                    </Rectangle.OpacityMask>
                </Rectangle>
                <TextBlock DataContext="{Binding ElementName=SelfWindow}"
                           Style="{StaticResource NormalTextBlock}"
                           Text="{Binding CorrectCount}"
                           Margin="0 3 0 0"
                           FontSize="14pt"/>

                <Rectangle Width="1.5"
                           Height="20"
                           Margin="10 0 10 0" 
                           Stroke="Gray"/>

                <Rectangle Width="23" 
                           Height="23"
                           Margin="0 0 5 0"
                           Fill="#f03e3e">
                    <Rectangle.OpacityMask>
                        <VisualBrush Visual="{iconPacks:FontAwesome Kind=TimesCircleSolid}"/>
                    </Rectangle.OpacityMask>
                </Rectangle>
                <TextBlock DataContext="{Binding ElementName=SelfWindow}"
                           Style="{StaticResource NormalTextBlock}"
                           Text="{Binding IncorrectCount}"
                           Margin="0 3 0 0"
                           FontSize="14pt"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Width="200"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0 -10 10 0"
                        Grid.Column="1"
                        Height="30">
                <ToggleButton  Margin="100 0 0 0"
                               Style="{DynamicResource MahApps.Styles.ToggleButton.Circle}"
                               Width="30"
                               Height="30"
                               IsChecked="True"
                               IsTabStop="True"
                               KeyboardNavigation.IsTabStop="True"
                               KeyboardNavigation.DirectionalNavigation="None"
                               PreviewKeyDown="ToggleButton_PreviewKeyDown"
                               Checked="ToggleBtnColor_Checked"
                               Unchecked="ToggleBtnColor_Checked">
                    <ToggleButton.ContentTemplate>
                        <DataTemplate>
                            <iconPacks:PackIconFontAwesome Width="20"
                                                           Height="20"
                                                           Kind="AdjustSolid" />
                        </DataTemplate>
                    </ToggleButton.ContentTemplate>
                </ToggleButton>
                <ToggleButton Margin="20 0 0 0" 
                              Width="30"
                              Height="30"
                              IsChecked="True"
                              Unchecked="ToggleButton_Checked"
                              Checked ="ToggleButton_Checked"
                              IsTabStop="True" 
                              KeyboardNavigation.IsTabStop="True"
                              KeyboardNavigation.DirectionalNavigation="None"
                              PreviewKeyDown="ToggleButton_PreviewKeyDown"
                              Style="{DynamicResource MahApps.Styles.ToggleButton.Circle}">
                    <ToggleButton.ContentTemplate>
                        <DataTemplate>
                            <iconPacks:PackIconFontAwesome Width="20"
                                                           Height="20"
                                                           Kind="HandPaperSolid" />
                        </DataTemplate>
                    </ToggleButton.ContentTemplate>
                </ToggleButton>
            </StackPanel>
        </Grid>
       
        <local:KeyLayoutBox x:Name="KeyLayoutBox"
                            Clickable="False"
                            IsEnabled="True"
                            HorizontalAlignment="Center"/>
    </StackPanel>
</mah:MetroWindow>
